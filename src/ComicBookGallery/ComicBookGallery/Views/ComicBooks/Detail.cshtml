
@{
    ViewBag.Title = "Detail";

    var seriesTitle = "The Amazing SpiderMan";
    var issueNumber = 700;
    var description = "<p>Final issue! Witness the death of Dr. Octopus!</p>";
    var artists = new string[]
    {
        "Script: Dan Slott",
        "Pencils: Humberto Ramos",
        "Inks: Victor Olazaba",
        "Colors: Edgar Delgado",
        "Letters: Chris Eliopoulos",
    };
}

<h1>@seriesTitle</h1>
<h2>#@issueNumber</h2>

<h5>Description:</h5>
<div>@Html.Raw(description)</div>

@if (artists.Length > 0)
{
    <h5>Artists:</h5>
    <div>
        <ul>
            @foreach (var artist in artists)
            {
                <li>@artist</li>
            }
        </ul>
    </div>
}

